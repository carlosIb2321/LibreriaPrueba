
<%= form_with(model: storage, url: url, local: true) do |form| %>
  
  <% if storage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(storage.errors.count, "error") %> prohibited this storage from being saved:</h2>

      <ul>
        <% storage.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

   
  <div class="field">
    <%= form.label :book_id %>
    <%- if params[:action] == 'new' %>
      <%- books = @books.map { |book| [book.title, book.id]} %>
      <%= form.select :book_id, options_for_select(books) %>
    <%- else %>
      <p> <%= storage.book.title %> </p>
    <% end %>
  </div>

 

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
