<h3><%= @store.address%></h3>
<h3><%= @store.codename%></h3> 
<h3><%= @store.Phone%></h3>

<table class="table">
     <thead class="thead-dark">
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Author</th>
        <th scope="col">Year</th>
        <th scope="col">Quantity</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @storages.each do |storage| %>
        <tr>
          <td><%= storage.book.title %></td>
          <td><%= storage.book.author %></td>
          <td><%= storage.book.year.strftime('%d-%m-%Y') %></td>
          <td><%= storage.quantity %></td>
          <td><%= link_to 'Edit', edit_storage_path(storage), {:class=>"btn btn-light"} %></td>
          <td><%= link_to 'Destroy', storage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          
        </tr>
      <% end %>
    </tbody>
  </table>